<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>Hello, world!</title>
    <style>
        .makebuttonlink{
          background: none!important;
          border: none;
          padding: 0!important;
          /*optional*/
          font-family: arial, sans-serif;
          /*input has OS specific font-family*/
          color: #069;
          text-decoration: none;
          cursor: pointer;
      }
      .polaroid {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
      </style>
</head>

<body class="jumbotron">
    <div>
        <center>
            <div class="row btn-group">
                <% listx.forEach(function(list){ %>
                    <button id="btn<%= list.list_id %>" class="btn btn-outline-primary" role="group" onclick=show(<%= list.list_id %>)><%= list.listname %></button>
                <% }); %>
            </div>
        </center><br><br>
        <div id="nores" style="position: absolute;height: 100%;width: 100%;margin: 0;left: 0;padding-top: 100px;"><center>No List Selected</center></div>
            <div id="list">
            <% listx.forEach(function(list){ %>
                <div class="row" style="display: none;" id=<%= list.list_id %>>
                <% list.lists.forEach(function(temp){ %>
                <span class="card col-2 col-md-2 polaroid" style="width: 18rem;padding:0px;margin-right:10px;margin-bottom:10px;">
                    <img class="card-img-top" src=<%= temp.image_url %> alt="Card image cap" style=width:100%;" height="225">
                    <span class="card-body">
                      <center><button class="card-title makebuttonlink" style="cursor:pointer;"><%= temp.title %></button></center>
                    </span>
                </span>
                <% }); %>
                </div>
            <% }); %>
            </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous">
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous">
    </script>
    <script>
        var info;
        function show(txt){
            $("#nores").html("<center>No Anime Added</center>");
            //console.log(txt);
            for(i in info.listx)
            {
                //console.log(i,info.listx[i].listname);
                if(info.listx[i].list_id==txt){
                    if(info.listx[i].lists.length==0)
                    $("#nores").show();
                    else
                    $("#nores").hide();
                    document.getElementById(info.listx[i].list_id).style.display="";
                    console.log("btn"+info.listx[i].list_id);
                    $("#btn"+info.listx[i].list_id).addClass("active");

                }else{
                    document.getElementById(info.listx[i].list_id).style.display="none";
                    console.log("btn"+info.listx[i].list_id);
                    $("#btn"+info.listx[i].list_id).removeClass("active");
                }
            }
        }
        $.get("/getlist",function(data,result){
            info=data;
            console.log(data);
        });
    </script>
</body>

</html>